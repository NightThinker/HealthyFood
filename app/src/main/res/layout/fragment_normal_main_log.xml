<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/logBarName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/budget" />

                        <TextView
                            android:id="@+id/txtTotalKcal"
                            style="@style/logBarNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/logBarName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/food" />

                        <TextView
                            android:id="@+id/txtFood"
                            style="@style/logBarNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/logBarName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exerciseValue" />

                        <TextView
                            android:id="@+id/txtExert"
                            style="@style/logBarNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/logBarName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/net" />

                        <TextView
                            android:id="@+id/txtNet"
                            style="@style/logBarNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/logBarName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/under" />

                        <TextView
                            android:id="@+id/txtOver"
                            style="@style/logBarNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#d8d8d8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="มื้อเช้า"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp"
                    android:padding="5dp"/>

                <ListView
                    android:id="@+id/listViewBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip" >
                </ListView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:text="มื้อกลางวัน"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp"
                    android:padding="5dp"/>

                <ListView
                    android:id="@+id/listViewLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip" >
                </ListView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:text="มื้อเย็น"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp"
                    android:padding="5dp"/>

                <ListView
                    android:id="@+id/listViewDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip">
                </ListView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:text="มื้อว่าง"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp"
                    android:padding="5dp"/>

                <ListView
                    android:id="@+id/listViewSnack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip">
                </ListView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:text="ออกกำลังกาย"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp"
                    android:padding="5dp"/>

                <ListView
                    android:id="@+id/listViewExert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip" >
                </ListView>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:onClick="addNewNoteFunction"
        android:src="@drawable/ic_action_add"
        app:backgroundTint="?attr/colorPrimary"
        app:borderWidth="0dp"
        app:elevation="5dp"
        app:rippleColor="?attr/colorPrimaryDark" />
</RelativeLayout>