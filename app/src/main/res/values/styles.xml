<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Logo_Big">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#05011C</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>
    <style name="Logo_Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#05011C</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Question">
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="Edt">
        <item name="android:typeface">serif</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="button_add">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="li_add">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="mar">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="logBarName">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">1.5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="logBarNum">
        <item name="android:layout_marginTop">1.5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="nameMeal">
        <item name="android:layout_marginTop">1.5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
